APP_HOST=0.0.0.0
APP_PORT=5000
APP_LOG_LEVEL=info

# Email location in the webhook request body (dot path)
WEBHOOK_EMAIL_PATH=sshCertificateRequest.keyID

# Azure credentials
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_GRAPH_SCOPE=https://graph.microsoft.com/.default
AZURE_GRAPH_BASE_URL=https://graph.microsoft.com/v1.0
AZURE_GROUPS_CLAIM_NAME=azure_group_ids
AZURE_GROUPS_SECURITY_ONLY=false

# Step CA webhook signature verification (base64)
STEPCA_WEBHOOK_SECRET=your-webhook-secret
# Optional: verify webhook ID header
STEPCA_WEBHOOK_ID=your-webhook-id

# TLS / mTLS
TLS_CERT_FILE=/app/certs/server.crt
TLS_KEY_FILE=/app/certs/server.key
TLS_CLIENT_CA_FILE=/app/certs/ca.crt
TLS_REQUIRE_CLIENT_CERT=true
